{
  "name": "obs-oracle-before-signing",
  "version": "1.0.0",
  "description": "OBS - Oracle Before Signing: Chat-only transaction risk analysis and approval system",
  "private": true,
  "workspaces": [
    "apps/frontend",
    "apps/backend",
    "chain"
  ],
  "scripts": {
    "dev": "concurrently --kill-others-on-fail --names=BACKEND,FRONTEND \"npm run dev --workspace=apps/backend\" \"npm run dev --workspace=apps/frontend\"",
    "dev:backend": "npm run dev --workspace=apps/backend",
    "dev:frontend": "npm run dev --workspace=apps/frontend",
    "dev:all": "concurrently --kill-others-on-fail \"npm run dev:backend\" \"npm run dev:frontend\" \"npm run dev:chain\" || echo 'Note: Chain is optional'",
    "chain": "npm run dev --workspace=chain",
    "chain:deploy": "npm run deploy --workspace=chain",
    "chain:compile": "npm run compile --workspace=chain",
    "monad:deploy": "npm run deploy:monad --workspace=chain",
    "monad:verify": "npm run verify:monad --workspace=chain",
    "install:all": "npm install",
    "build": "npm run build --workspace=apps/frontend && npm run build --workspace=apps/backend",
    "start": "concurrently \"npm run start --workspace=apps/backend\" \"npm run start --workspace=apps/frontend\"",
    "kill:ports": "node scripts/kill-ports.js",
    "health": "node scripts/health-check.js"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}